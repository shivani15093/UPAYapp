<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="500dp"  >


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


                <ViewFlipper
                    android:id="@+id/viewflipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoStart="true"
                    android:flipInterval="2000"
                    android:layout_below="@+id/imageView3">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@+id/imageView3"
                        android:scaleType="fitXY"
                        android:src="@drawable/upay1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@+id/imageView3"
                        android:scaleType="fitXY"
                        android:src="@drawable/upay2"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_below="@+id/imageView3"
                        android:scaleType="fitXY"
                        android:src="@drawable/upay3"/>


                </ViewFlipper>


            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/upay4"
                android:layout_below="@+id/viewflipper"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/picture"
                android:background="@color/cardview_dark_background">

                <Button
                    android:id="@+id/news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/news_events" />
                <Button
                    android:id="@+id/team"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news"
                    android:text="Team Members" />
                <Button
                    android:id="@+id/gallery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/team"
                    android:text="Gallery" />
                <Button
                    android:id="@+id/aboutUs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gallery"
                    android:text="About Us" />
                <Button
                    android:id="@+id/contacts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/aboutUs"
                    android:text="Contacts" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>