<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_margin="5dp"
    card_view:cardBackground=""
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:cardPadding="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:background="@color/cardview_dark_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/studentPhotoImageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/viewdatabase"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/registeredStudentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/studentPhotoImageView"
            android:layout_toEndOf="@+id/studentPhotoImageView"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/registeredStudentCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/studentPhotoImageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="21dp"
            android:layout_toRightOf="@+id/studentPhotoImageView"
            android:layout_toEndOf="@+id/studentPhotoImageView"
            android:textColor="@color/white"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>